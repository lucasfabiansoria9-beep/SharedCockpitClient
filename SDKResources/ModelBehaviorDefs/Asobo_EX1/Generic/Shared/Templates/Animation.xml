<ModelBehaviors>
	<!-- ################################## ANIMATION ################################# -->
	<!-- ############################################################################## -->
	<Include RelativeFile="ParametersFn\\Animation.xml"/>
	<!-- ############################################################################## -->
	<!-- IN: ANIM_CODE (RPN snippet) -->
	<Template Name="ASOBO_GT_Anim_Code_Template">
		<UseTemplate Name="ASOBO_GT_Anim_Template"/>
	</Template>
	<!-- IN: See ASOBO_Anim_Sim_Default_Parameters -->
	<Template Name="ASOBO_GT_Anim_Sim_Template">
		<UseTemplate Name="ASOBO_GT_Anim_Template">
			<UseParametersFn Name="ASOBO_Anim_Sim_Default_Parameters"/>
		</UseTemplate>
	</Template>
	<!-- IN: See ASOBO_Anim_Simvar_Code_Parameters -->
	<Template Name="ASOBO_GT_Anim_Simvar_Code_Template">
		<UseTemplate Name="ASOBO_GT_Anim_Template">
			<UseParametersFn Name="ASOBO_Anim_Simvar_Code_Parameters"/>
		</UseTemplate>
	</Template>
	<!-- IN: ANIM_PFN (ParametersFn to use) -->
	<Template Name="ASOBO_GT_Anim_Template">
		<Parameters Type="Override">
			<Condition Valid="DISABLE_ANIMATION">
				<False>
					<UseParametersFn Name="ASOBO_PFN_Call_Overridable_ParametersFn_Helper">
						<PFN_PARAM_DEFAULT>ASOBO_Process_Anim_Transforms_Parameters</PFN_PARAM_DEFAULT>
						<PFN_PARAM_NAME>ANIM_PARAMETERS_TRANSFORMS_FN</PFN_PARAM_NAME>
					</UseParametersFn>
				</False>
			</Condition>
		</Parameters>
		<Condition Valid="DISABLE_ANIMATION">
			<False>
				<UseTemplate Name="@BaseAnimTemplate">
					<Condition NotEmpty="ANIM_PFN">
						<UseParametersFn Name="ASOBO_PFN_Call_Overridable_ParametersFn_Helper">
							<PFN_PARAM_DEFAULT>#ANIM_PFN#</PFN_PARAM_DEFAULT>
							<PFN_PARAM_NAME>ANIM_PARAMETERS_FN</PFN_PARAM_NAME>
						</UseParametersFn>				
					</Condition>
				</UseTemplate>
				<UseTemplate Name="@BaseAnimTriggerTemplate">
					<Condition NotEmpty="ANIM_TRIGGER_PFN">
						<UseParametersFn Name="ASOBO_PFN_Call_Overridable_ParametersFn_Helper">
							<PFN_PARAM_DEFAULT>#ANIM_TRIGGER_PFN#</PFN_PARAM_DEFAULT>
							<PFN_PARAM_NAME>ANIM_TRIGGER_PARAMETERS_FN</PFN_PARAM_NAME>
						</UseParametersFn>		
					</Condition>
				</UseTemplate>
			</False>
		</Condition>
	</Template>
	<Template Name="ASOBO_GT_Component_Anim_Template">
		<Parameters Type="Default">
			<CONCRETE_ANIMATION_TEMPLATE>ASOBO_GT_Anim_Template</CONCRETE_ANIMATION_TEMPLATE>
		</Parameters>
		<UseTemplate Name="ASOBO_GT_Component_Template">
			<TEMPLATE_TO_USE>#CONCRETE_ANIMATION_TEMPLATE#</TEMPLATE_TO_USE>
		</UseTemplate>
	</Template>
</ModelBehaviors>