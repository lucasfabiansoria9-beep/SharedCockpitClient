<ModelBehaviors>
	<!-- ################################## MATERIAL ################################## -->
	<!-- ############################################################################## -->
	<Include RelativeFile="ParametersFn\\Material.xml"/>
	<!-- ############################################################################## -->
	<!-- IN: EMISSIVE_CODE (RPN snippet) -->
	<Template Name="ASOBO_GT_Emissive_Code_Template">
		<UseTemplate Name="ASOBO_GT_Emissive_Template"/>
	</Template>
	<!-- IN: See ASOBO_Material_Sim_Default_Parameters -->
	<Template Name="ASOBO_GT_Emissive_Sim_Template">
		<UseTemplate Name="ASOBO_GT_Emissive_Template">
			<UseParametersFn Name="ASOBO_Material_Sim_Default_Parameters"/>
		</UseTemplate>
	</Template>
	<!-- IN: See ASOBO_Emissive_Simvar_Code_Parameters -->
	<Template Name="ASOBO_GT_Emissive_Simvar_Code_Template">
		<UseTemplate Name="ASOBO_GT_Emissive_Template">
			<UseParametersFn Name="ASOBO_Emissive_Simvar_Code_Parameters"/>
		</UseTemplate>
	</Template>
	<!-- IN: EMISSIVE_PFN (ParametersFn to use) -->
	<Template Name="ASOBO_GT_Emissive_Template">
		<Parameters Type="Override">
			<Condition Valid="DISABLE_EMISSIVE">
				<False>
					<UseParametersFn Name="ASOBO_PFN_Call_Overridable_ParametersFn_Helper">
						<PFN_PARAM_DEFAULT>ASOBO_Process_Emissive_Transforms_Parameters</PFN_PARAM_DEFAULT>
						<PFN_PARAM_NAME>EMISSIVE_PARAMETERS_TRANSFORMS_FN</PFN_PARAM_NAME>
					</UseParametersFn>					
				</False>
			</Condition>
		</Parameters>
		<Condition Valid="DISABLE_EMISSIVE">
			<False>
				<UseTemplate Name="@BaseEmissiveTemplate">
					<Condition NotEmpty="EMISSIVE_PFN">
						<UseParametersFn Name="ASOBO_PFN_Call_Overridable_ParametersFn_Helper">
							<PFN_PARAM_DEFAULT>#EMISSIVE_PFN#</PFN_PARAM_DEFAULT>
							<PFN_PARAM_NAME>EMISSIVE_PARAMETERS_FN</PFN_PARAM_NAME>
						</UseParametersFn>				
					</Condition>
				</UseTemplate>
			</False>
		</Condition>
	</Template>
	<Template Name="ASOBO_GT_Component_Emissive_Template">
		<Parameters Type="Default">
			<CONCRETE_EMISSIVE_TEMPLATE>ASOBO_GT_Emissive_Template</CONCRETE_EMISSIVE_TEMPLATE>
		</Parameters>
		<UseTemplate Name="ASOBO_GT_Component_Template">
			<TEMPLATE_TO_USE>#CONCRETE_EMISSIVE_TEMPLATE#</TEMPLATE_TO_USE>
		</UseTemplate>
	</Template>
</ModelBehaviors>