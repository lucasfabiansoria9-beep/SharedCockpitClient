<ModelBehaviors>
	<!-- ################################# INTERACTION ################################ -->
	<!-- ############################################################################## -->
	<Include RelativeFile="ParametersFn\\Interaction_ParametersFn.xml"/>
	<Include RelativeFile="ParametersFn\\Interaction_Helpers.xml"/>
	<!-- ############################################################################## -->
	<!-- IN: INTERACTION_TYPE (type of interaction) -->
	<!-- IN: IE_NAME (name of the generated interaction) -->
	<!-- IN: IE_TYPE (categorization of the interaction created) -->
	<Template Name="ASOBO_Interaction_Template">
		<Parameters Type="Default">
			<PFN_GET_PARAMETERS>ASOBO_Default_Interaction_Parameters</PFN_GET_PARAMETERS>
			<Condition Check="IE_NAME">
				<IN_BASE_NAME>#IE_TYPE#_#INTERACTION_TYPE#_#IE_NAME#</IN_BASE_NAME>
			</Condition>
			<Condition Valid="COPY_IE_TYPE_TO_IE_ID_SOURCE">				
				<IE_ID_SOURCE>#IE_TYPE#</IE_ID_SOURCE>
			</Condition>
		</Parameters>
		<Parameters Type="Override">
			<UseParametersFn Name="ASOBO_Get_Common_Parameters_Helper"/>
		</Parameters>
		<UseTemplate Name="@BaseInteractionTemplate">
			<UseParametersFn Name="#PFN_GET_PARAMETERS#">
				<IE_BASE_NAME>#IE_TYPE#</IE_BASE_NAME>
			</UseParametersFn>
		</UseTemplate>
	</Template>
	<!-- ############################################################################## -->
	<!-- IN: INTERACTION_TEMPLATE (Interaction template to use (has to define all related components) -->
	<Template Name="ASOBO_GT_Interaction_Template">
		<Parameters Type="Default">
			<IE_BASE_TO_EXTEND_FROM>@BaseInputEvent</IE_BASE_TO_EXTEND_FROM>
		</Parameters>
		<Parameters Type="Override">
			<LoadParameters ID="Interaction_Parameters"/>
			<RemoveSavedParameters ID="Interaction_Parameters"/>
		</Parameters>
		<UseTemplate Name="#INTERACTION_TEMPLATE#"/>
	</Template>
	<!-- ############################################################################## -->
	<Template Name="ASOBO_GT_Interaction_Simple_Template">
		<Component ID="#NODE_ID#" Node="#NODE_ID#">
			<UseTemplate Name="ASOBO_Process_Saved_Animations_Template"/>
			<UseTemplate Name="ASOBO_Process_Saved_Emissives_Template"/>
			<UseTemplate Name="ASOBO_Process_Saved_Visibility_Codes_Template"/>
			<UseTemplate Name="ASOBO_GT_Interaction_Simple_SubTemplate"/>
			<UseTemplate Name="@BasePartIdTemplate"/>
		</Component>
	</Template>
	<Template Name="ASOBO_GT_Interaction_Simple_SubTemplate">
		<Parameters Type="Default">
			<MOUSERECT_TEMPLATE>@BaseMouserectTemplate</MOUSERECT_TEMPLATE>
		</Parameters>
		<UseTemplate Name="ASOBO_Process_Saved_Input_Events_Template"/>
		<UseTemplate Name="#MOUSERECT_TEMPLATE#">
			<LoadParameters ID="Mouserect_Parameters"/>
			<RemoveSavedParameters ID="Mouserect_Parameters"/>
			<RemoveSavedParameters ID="Mouserect_Data"/>
			<RemoveSavedParameters ID="Mouserect_Data_@Im_Default"/>
			<RemoveSavedParameters ID="Mouserect_Data_@Im_Drag"/>
		</UseTemplate>
		<UseTemplate Name="ASOBO_Process_Saved_Updates_Template"/>
	</Template>
	<!-- ############################################################################## -->
	<Template Name="ASOBO_GT_Interaction_Covered_Template">
		<UseTemplate Name="ASOBO_GT_Interaction_Simple_Template"/>
		<UseTemplate Name="ASOBO_GT_Interaction_Covered_SubTemplate">
			<LoadParameters ID="Cover_Interaction_Parameters"/>
			<RemoveSavedParameters ID="Cover_Interaction_Parameters"/>
		</UseTemplate>
	</Template>
	<Template Name="ASOBO_GT_Interaction_Covered_SubTemplate">
		<Parameters Type="Override">
			<UseParametersFn Name="ASOBO_Make_Cover_Interaction_Helper"/>
		</Parameters>
		<UseTemplate Name="#INTERACTION_TEMPLATE#"/>
	</Template>
	<!-- ############################################################################## -->
</ModelBehaviors>