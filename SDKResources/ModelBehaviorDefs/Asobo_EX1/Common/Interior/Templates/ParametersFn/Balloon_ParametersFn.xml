<ModelBehaviors>
	<!-- ################################# BALLOON #################################### -->
	<!-- ############################################################################## -->
	<Include RelativeFile="InteractionPresets\\Balloon_Interactions.xml"/>
	<!-- ############################################################################## -->
    <ParametersFn Name="ASOBO_Burner_Valve_Parameters">
		<Parameters Type="Default">
			<VALVE_ID>1</VALVE_ID>
		</Parameters>
		<Parameters Type="Default">
			<VALVE_CLOSE_KEY>(&gt;K:BURNER_VALVE_CLOSE)</VALVE_CLOSE_KEY>
			<VALVE_OPEN_KEY>(&gt;K:BURNER_VALVE_OPEN)</VALVE_OPEN_KEY>
			<SIMVAR_VALVE>BURNER VALVE OPEN VALUE:#VALVE_ID#</SIMVAR_VALVE>
			<SIMVAR_VALVE_UNITS>percent over 100</SIMVAR_VALVE_UNITS>
		</Parameters>
		<Parameters Type="Default">
			<GET_VALVE>(A:#SIMVAR_VALVE#, #SIMVAR_VALVE_UNITS#)</GET_VALVE>
			<VALVE_CLOSE_CODE>#VALVE_ID# #VALVE_CLOSE_KEY#</VALVE_CLOSE_CODE>
			<VALVE_OPEN_CODE>#VALVE_ID# #VALVE_OPEN_KEY#</VALVE_OPEN_CODE>
		</Parameters>
		<ReturnParameters>
			<SIMVAR_VALVE>#SIMVAR_VALVE#</SIMVAR_VALVE>
			<GET_VALVE>#GET_VALVE#</GET_VALVE>
			<VALVE_CLOSE_CODE>#VALVE_CLOSE_CODE#</VALVE_CLOSE_CODE>
			<VALVE_OPEN_CODE>#VALVE_OPEN_CODE#</VALVE_OPEN_CODE>
		</ReturnParameters>
	</ParametersFn>
	<!-- ############################################################################## -->
	<ParametersFn Name="ASOBO_Burner_Igniter_Parameters">
		<Parameters Type="Default">
			<BURNER_ID>1</BURNER_ID>
		</Parameters>
		<Parameters Type="Default">
			<PILOT_LIGHT_SIMVAR>BURNER PILOT LIGHT ON:#BURNER_ID#</PILOT_LIGHT_SIMVAR>
			<PILOT_LIGHT_SIMVAR_UNIT>boolean</PILOT_LIGHT_SIMVAR_UNIT>
		</Parameters>
		<Parameters Type="Default">
			<GET_PILOT_LIGHT>(A:#PILOT_LIGHT_SIMVAR#, #PILOT_LIGHT_SIMVAR_UNIT#)</GET_PILOT_LIGHT>
			<SET_PILOT_LIGHT>(&gt;A:#PILOT_LIGHT_SIMVAR#, #PILOT_LIGHT_SIMVAR_UNIT#)</SET_PILOT_LIGHT>
		</Parameters>
		<ReturnParameters>
			<GET_PILOT_LIGHT>#GET_PILOT_LIGHT#</GET_PILOT_LIGHT>
			<SET_PILOT_LIGHT>#SET_PILOT_LIGHT#</SET_PILOT_LIGHT>
		</ReturnParameters>
	</ParametersFn>
	<!-- ############################################################################## -->
	<ParametersFn Name="ASOBO_Parachute_Valve_Parameters">
		<Parameters Type="Default">
			<PARACHUTE_VALVE_SIMVAR>BALLOON VENT OPEN VALUE</PARACHUTE_VALVE_SIMVAR><!-- Todo @gdavid : Replace by SimVar -->
			<PARACHUTE_VALVE_SIMVAR_UNIT>boolean</PARACHUTE_VALVE_SIMVAR_UNIT>
		</Parameters>
		<Parameters Type="Default">
			<GET_PARACHUTE_VALVE>(A:#PARACHUTE_VALVE_SIMVAR#, #PARACHUTE_VALVE_SIMVAR_UNIT#)</GET_PARACHUTE_VALVE>
			<SET_PARACHUTE_VALVE>(&gt;K:BALLOON_VENT_SET)</SET_PARACHUTE_VALVE>
			<TOGGLE_PARACHUTE_VALVE>(&gt;K:BALLOON_VENT_TOGGLE)</TOGGLE_PARACHUTE_VALVE>
		</Parameters>
		<ReturnParameters>
			<PARACHUTE_VALVE_SIMVAR>#PARACHUTE_VALVE_SIMVAR#</PARACHUTE_VALVE_SIMVAR>
			<GET_PARACHUTE_VALVE>#GET_PARACHUTE_VALVE#</GET_PARACHUTE_VALVE>
			<SET_PARACHUTE_VALVE>#SET_PARACHUTE_VALVE#</SET_PARACHUTE_VALVE>
			<TOGGLE_PARACHUTE_VALVE>#TOGGLE_PARACHUTE_VALVE#</TOGGLE_PARACHUTE_VALVE>
		</ReturnParameters>
	</ParametersFn>
</ModelBehaviors>