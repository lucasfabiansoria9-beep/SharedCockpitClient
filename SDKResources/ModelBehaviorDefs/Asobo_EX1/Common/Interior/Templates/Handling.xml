<ModelBehaviors>
	<!-- ################################## HANDLING ################################## -->
	<!-- ############################################################################## -->
	<Include RelativeFile="Inputs\\Handling_Inputs.xml"/>
	<Include RelativeFile="ParametersFn\\Handling_ParametersFn.xml"/>
	<Include RelativeFile="SubTemplates\\Handling_SubTemplates.xml"/>
	<!-- ############################################################################## -->
	<!-- Yoke/Stick -->
	<!-- IN: See ASOBO_IT_HANDLING_Yoke_SubTemplate -->
	<Template Name="ASOBO_IT_HANDLING_Single_Yoke_Template">
		<TemplateAlias>ASOBO_IT_HANDLING_Stick_Template</TemplateAlias>
		<TemplateAlias>ASOBO_IT_HANDLING_Single_Stick_Template</TemplateAlias>
		<Parameters Type="Default">
			<IN_BASE_NAME>HANDLING_YOKE</IN_BASE_NAME>
		</Parameters>
		<UseTemplate Name="ASOBO_IT_HANDLING_Yoke_SubTemplate"/>
	</Template>
	<!-- IN (opt): NODE_ID/_PILOT/_COPILOT (Yoke node name (for highlights)) -->
	<Template Name="ASOBO_IT_HANDLING_Double_Yoke_Template">
		<TemplateAlias>ASOBO_IT_HANDLING_Double_Stick_Template</TemplateAlias>
		<Parameters Type="Default">
			<COMMON_PARAMETERS_1>Pilot</COMMON_PARAMETERS_1>
			<COMMON_PARAMETERS_2>Copilot</COMMON_PARAMETERS_2>
		</Parameters>
		<Parameters Type="Override">
			<SaveParameters ID="Common_Parameters_Yoke_#COMMON_PARAMETERS_2#" Append="Default">
				<PART_ID_ONLY>True</PART_ID_ONLY>
			</SaveParameters>
		</Parameters>
		<UseTemplate Name="ASOBO_Double_Template_Helper">
			<TEMPLATE>ASOBO_IT_HANDLING_Single_Yoke_Template</TEMPLATE>
			<COMMON_PARAMETERS_PREFIX>Common_Parameters_Yoke</COMMON_PARAMETERS_PREFIX>
		</UseTemplate>
	</Template>
	<!-- ############################################################################## -->
	<!-- Rudder pedals -->
	<!-- IN: See ASOBO_IT_HANDLING_Rudder_Pedals_SubTemplate -->
	<Template Name="ASOBO_IT_HANDLING_Single_Rudder_Pedals_Template">
		<TemplateAlias>ASOBO_IT_HANDLING_Rudder_Pedals_Template</TemplateAlias>
		<Parameters Type="Default">
			<IN_BASE_NAME>HANDLING_RUDDER_PEDALS</IN_BASE_NAME>
			<GET_COMMON_PARAMETERS_FN>ASOBO_Rudder_Pedals_Common_Parameters</GET_COMMON_PARAMETERS_FN>
		</Parameters>
		<UseTemplate Name="ASOBO_IT_HANDLING_Rudder_Pedals_SubTemplate"/>
	</Template>
	<!-- IN (opt): NODE_ID_LEFT/_PILOT/_COPILOT (Left rudder node name) -->
	<!-- IN (opt): NODE_ID_RIGHT/_PILOT/_COPILOT (Right rudder node name) -->
	<Template Name="ASOBO_IT_HANDLING_Double_Rudder_Pedals_Template">
		<Parameters Type="Default">
			<COMMON_PARAMETERS_1>Pilot</COMMON_PARAMETERS_1>
			<COMMON_PARAMETERS_2>Copilot</COMMON_PARAMETERS_2>
		</Parameters>
		<Parameters Type="Override">
			<SaveParameters ID="Common_Parameters_Rudder_Pedals_#COMMON_PARAMETERS_2#" Append="Default">
				<PART_ID_ONLY>True</PART_ID_ONLY>
			</SaveParameters>
		</Parameters>
		<UseTemplate Name="ASOBO_Double_Template_Helper">
			<TEMPLATE>ASOBO_IT_HANDLING_Rudder_Pedals_Template</TEMPLATE>
			<COMMON_PARAMETERS_PREFIX>Common_Parameters_Rudder_Pedals</COMMON_PARAMETERS_PREFIX>
		</UseTemplate>
	</Template>
	<!-- ############################################################################## -->
	<Template Name="ASOBO_IT_HANDLING_Double_Helicraft_Rudder_Pedals_Template">
		<UseTemplate Name="ASOBO_IT_HANDLING_Double_Rudder_Pedals_Template">
			<SIMVAR_RUDDER_PEDALS>TAIL ROTOR PEDAL POSITION</SIMVAR_RUDDER_PEDALS>
		</UseTemplate>
	</Template>
	<!-- ############################################################################## -->
	<!-- IN: See ASOBO_IT_HANDLING_Brakes_Animation_SubTemplate -->
	<Template Name="ASOBO_IT_HANDLING_Brakes_Animation_Template">
		<UseTemplate Name="ASOBO_IT_HANDLING_Brakes_Animation_SubTemplate"/>
	</Template>
	<!-- ############################################################################## -->
	<Template Name="ASOBO_IT_HANDLING_Elevator_Trim_Indicator_Template">
		<UseTemplate Name="ASOBO_IT_HANDLING_Trim_Indicator_SubTemplate">
			<TRIM_TYPE>ELEVATOR</TRIM_TYPE>
		</UseTemplate>
	</Template>
	<Template Name="ASOBO_IT_HANDLING_Aileron_Trim_Indicator_Template">
		<UseTemplate Name="ASOBO_IT_HANDLING_Trim_Indicator_SubTemplate">
			<TRIM_TYPE>AILERON</TRIM_TYPE>
		</UseTemplate>
	</Template>
	<Template Name="ASOBO_IT_HANDLING_Rudder_Trim_Indicator_Template">
		<UseTemplate Name="ASOBO_IT_HANDLING_Trim_Indicator_SubTemplate">
			<TRIM_TYPE>RUDDER</TRIM_TYPE>
		</UseTemplate>
	</Template>
	<!-- ############################################################################## -->
	<!-- IN: See ASOBO_IT_HANDLING_Tiller_SubTemplate -->
	<Template Name="ASOBO_IT_HANDLING_Tiller_Template">
		<UseTemplate Name="ASOBO_IT_HANDLING_Tiller_SubTemplate"/>
	</Template>
	<!-- ############################################################################## -->
	<!-- IN: PFN_GET_PARAMETERS -->
	<Template Name="ASOBO_IT_HANDLING_Interaction_Template">
		<UseTemplate Name="ASOBO_Interaction_Template">
			<IE_TYPE>HANDLING</IE_TYPE>
		</UseTemplate>
	</Template>
	<!-- ############################################################################## -->
</ModelBehaviors>