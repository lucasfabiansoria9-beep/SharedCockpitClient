<ModelBehaviors>
	<!-- ############################### PARAMETERS FN ################################ -->
	<!-- ############################################################################## -->
	<!-- @DOC FUNCTION ASOBO_Bool_Visibility_Parameters
		@Brief Make two visibility components using the provided IS_VISIBLE condition or GET_VISIBILITY_CODE processor outputing a IS_VISIBLE condition
		@Param IS_VISIBLE returned as it is if not empty
		@Param VISILITY_L_VARIABLE Used only if not empty, name of the local variable driving the condition
		@Param VISIBILTY_IE_VARIABLE Used only if not empty, name of the input event driving the condition
		@Return IS_VISIBLE boolean condition used to drive a visibility code
	-->
	<ParametersFn Name="ASOBO_Bool_Visibility_Parameters">
		<Parameters Type="Default">
			<Switch>
				<Case Check="VISIBILTY_IE_VARIABLE">
					<IS_VISIBLE>(B:#VISIBILTY_IE_VARIABLE#, Bool)</IS_VISIBLE>
				</Case>
				<Case Check="VISILITY_L_VARIABLE">
					<IS_VISIBLE>(L:#VISILITY_L_VARIABLE#, Bool)</IS_VISIBLE>
				</Case>
			</Switch>
		</Parameters>
		<ReturnParameters>
			<IS_VISIBLE>#IS_VISIBLE#</IS_VISIBLE>
		</ReturnParameters>
	</ParametersFn>
	<!-- ############################################################################## -->
	<!-- @DOC FUNCTION ASOBO_Asset_Based_Visibility_Parameters
		@Brief Makes a IS_VISIBLE parameter which checks the position of an animation.
		@Param OP_TYPE Controls the operation to check on the asset position. Defaults to GREATER_THAN
		@Param ANIM_NAME Name of the Animation to check. One of ANIM_NAME, EMISSIVE_NAME or VISIBILITY_NAME is required.
		@Param EMISSIVE_NAME Name of the Animation to check. One of ANIM_NAME, EMISSIVE_NAME or VISIBILITY_NAME is required.
		@Param VISIBILITY_NAME Name of the Animation to check. One of ANIM_NAME, EMISSIVE_NAME or VISIBILITY_NAME is required.
		@Param VISIBILITY_THRESHOLD Required. Position (between 0 and 100) beyond which the node will be shown. 
		@Param ATTACHMENT_ALIAS Optional. If the target asset name is in a different attachment, this needs to be specified to indicate the attachment to look in. It corresponds to the alias given to the sim_attachment in attached_object.cfg. 
		@Return IS_VISIBLE boolean condition used to drive a visibility code
	-->
	<ParametersFn Name="ASOBO_Asset_Based_Visibility_Parameters">
		<Parameters Type="Default">
			<OP_TYPE>GREATER_THAN</OP_TYPE>
		</Parameters>
		<Parameters Type="Override">
			<Switch>
				<Case NotEmpty="ANIM_NAME">
					<ASSET_TYPE>Anim</ASSET_TYPE>
					<ASSET_NAME>#ANIM_NAME#</ASSET_NAME>
				</Case>
				<Case NotEmpty="EMISSIVE_NAME">
					<ASSET_TYPE>Emissive</ASSET_TYPE>
					<ASSET_NAME>#EMISSIVE_NAME#</ASSET_NAME>
				</Case>
				<Case NotEmpty="VISIBILITY_NAME">
					<ASSET_TYPE>Visibility</ASSET_TYPE>
					<ASSET_NAME>#VISIBILITY_NAME#</ASSET_NAME>
				</Case>
			</Switch>
		</Parameters>
		<Parameters Type="Override">
			<Condition NotEmpty="ATTACHMENT_ALIAS">
				<ASSET_NAME>#ASSET_NAME#\@#ATTACHMENT_ALIAS#</ASSET_NAME>
			</Condition>
		</Parameters>
		<Parameters Type="Override">
			<GET_ANIM_POS>'#ASSET_NAME#' (F:#ASSET_TYPE#Pos)</GET_ANIM_POS>
		</Parameters>
		<Parameters Type="Override">
			<Switch Param="OP_TYPE">
				<Case Value="GREATER_THAN">
					<IS_VISIBLE>#GET_ANIM_POS# #VISIBILITY_THRESHOLD# &gt;</IS_VISIBLE>
				</Case>
				<Case Value="GREATER_OR_EQUAL_THAN">
					<IS_VISIBLE>#GET_ANIM_POS# #VISIBILITY_THRESHOLD# &gt;=</IS_VISIBLE>
				</Case>
				<Case Value="LOWER_THAN">
					<IS_VISIBLE>#GET_ANIM_POS# #VISIBILITY_THRESHOLD# &lt;</IS_VISIBLE>
				</Case>
				<Case Value="LOWER_OR_EQUAL_THAN">
					<IS_VISIBLE>#GET_ANIM_POS# #VISIBILITY_THRESHOLD# &lt;=</IS_VISIBLE>
				</Case>
				<Case Value="EQUAL">
					<IS_VISIBLE>#GET_ANIM_POS# #VISIBILITY_THRESHOLD# ==</IS_VISIBLE>
				</Case>
				<Case Value="FUZZY_EQUAL">
					<IS_VISIBLE>#GET_ANIM_POS# #VISIBILITY_THRESHOLD# - abs 0.1 &lt;</IS_VISIBLE>
				</Case>
			</Switch>
		</Parameters>
		<ReturnParameters>
			<IS_VISIBLE>#IS_VISIBLE#</IS_VISIBLE>
		</ReturnParameters>
	</ParametersFn>
	<!-- ############################################################################## -->
</ModelBehaviors>