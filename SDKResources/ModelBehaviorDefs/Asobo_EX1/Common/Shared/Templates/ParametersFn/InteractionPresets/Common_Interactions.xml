<ModelBehaviors>
	<!-- ################################## COMMON #################################### -->
	<!-- ############################################################################## -->
    <!-- 
        Generic implementation of a settings config to validate the checkup when the user moves the intercation down, then up, then back to the middle.
        Requires : 
            <IE_GET_STATE> : Retrieve the current position of the interaction (-100 to 100)
            <IE_SET_STATE> : Sets the current position of the interaction (-100 to 100)
			<SIMVAR> : SimVar To Watch
             A SavedParameter WearAndTearElements with the list of elements affected
    -->
    <ParametersFn Name="ASOBO_WearAndTear_DownUp_Generic_Settings_Config">
        <Parameters Type="Default">
            <MIN_VALUE>-100</MIN_VALUE>
            <MAX_VALUE>100</MAX_VALUE>
        </Parameters>
        <Parameters Type="Override">
            <UseParametersFn Name="ASOBO_WearAndTear_DownUp_Checkup_Parameters">
                <GET_VALUE>#IE_GET_STATE#</GET_VALUE>
            </UseParametersFn>
            <TOOLTIP_VALUE_FORMAT>'%.2f%%'</TOOLTIP_VALUE_FORMAT>
            <NB_INCREMENT_FOR_FULL_RANGE>20</NB_INCREMENT_FOR_FULL_RANGE>
        </Parameters>
        <ReturnParameters>
            <NB_INCREMENT_FOR_FULL_RANGE>#NB_INCREMENT_FOR_FULL_RANGE#</NB_INCREMENT_FOR_FULL_RANGE>
            <VALUE_TYPE>NUMBER</VALUE_TYPE>
            <Condition Check="CLAMP_VALUE">
                <True>
                    <CLAMP_VALUE>#CLAMP_VALUE#</CLAMP_VALUE>
                </True>
                <False>
                    <MIN_VALUE>#MIN_VALUE#</MIN_VALUE>
                    <MAX_VALUE>#MAX_VALUE#</MAX_VALUE>
                </False>
            </Condition>
            <Switch>
                <Case Valid="DOWN_ON_RELEASE">
                    <ON_EXIT_LOCK>#MIN_VALUE# #IE_SET_STATE#</ON_EXIT_LOCK>
                </Case>
                <Case Valid="CENTER_ON_RELEASE">
                    <ON_EXIT_LOCK>#MIN_VALUE# #MAX_VALUE# + 2 / #IE_SET_STATE#</ON_EXIT_LOCK>
                </Case>
            </Switch>
            <IE_GET_STATE>#IE_GET_STATE#</IE_GET_STATE>
            <IE_SET_STATE>#IE_SET_STATE# #PROGRESSION_CHECK_CODE#</IE_SET_STATE>
            <UseParametersFn Name="ASOBO_Watch_Simvar_Helper">
                <SIMVAR>#SIMVAR#</SIMVAR>
            </UseParametersFn>
        </ReturnParameters>
    </ParametersFn>
    <!-- ############################################################################## -->
    <ParametersFn Name="ASOBO_Aileron_Interaction_Settings_Config">
        <Parameters Type="Override">
            <UseParametersFn Name="ASOBO_Yoke_Parameters"/>
        </Parameters>
        <ReturnParameters>
            <UseParametersFn Name="ASOBO_WearAndTear_DownUp_Generic_Settings_Config">
                <GET_VALUE>#GET_YOKE_X_PCT#</GET_VALUE>
                <IE_GET_STATE>#GET_YOKE_X_PCT#</IE_GET_STATE>
                <IE_SET_STATE>#SET_YOKE_X_PCT#</IE_SET_STATE>
                <SIMVAR>#SIMVAR_YOKE_X#</SIMVAR>
            </UseParametersFn>
        </ReturnParameters>
    </ParametersFn>
    <!-- ############################################################################## -->
    <ParametersFn Name="ASOBO_Elevator_Interaction_Settings_Config">
        <Parameters Type="Override">
            <UseParametersFn Name="ASOBO_Yoke_Parameters"/>
        </Parameters>
        <ReturnParameters>
            <UseParametersFn Name="ASOBO_WearAndTear_DownUp_Generic_Settings_Config">
                <GET_VALUE>#GET_YOKE_Y_PCT#</GET_VALUE>
                <CLAMP_VALUE>0 1 -100 100 (F:MapRange)</CLAMP_VALUE>
                <IE_GET_STATE>#GET_YOKE_Y_PCT#</IE_GET_STATE>
                <IE_SET_STATE>#SET_YOKE_Y_PCT#</IE_SET_STATE>
                <SIMVAR>#SIMVAR_YOKE_Y#</SIMVAR>
            </UseParametersFn>
            <GET_IE_VALUE_AS_PERCENT_OVER_100>#GET_YOKE_Y_PCT# -100 100 0 1 (F:MapRange)</GET_IE_VALUE_AS_PERCENT_OVER_100>
        </ReturnParameters>
    </ParametersFn>
    <!-- ############################################################################## -->
    <ParametersFn Name="ASOBO_Rudder_Interaction_Settings_Config">
        <Parameters Type="Override">
            <UseParametersFn Name="ASOBO_Yoke_Parameters"/>
        </Parameters>
        <ReturnParameters>
            <UseParametersFn Name="ASOBO_WearAndTear_DownUp_Generic_Settings_Config">
                <GET_VALUE>#GET_YOKE_Z_PCT#</GET_VALUE>
                <CLAMP_VALUE>0 1 -100 100 (F:MapRange)</CLAMP_VALUE>
                <IE_GET_STATE>#GET_YOKE_Z_PCT#</IE_GET_STATE>
                <IE_SET_STATE>#SET_YOKE_Z_PCT#</IE_SET_STATE>
                <SIMVAR>#SIMVAR_YOKE_Z#</SIMVAR>
            </UseParametersFn>
            <INTERACTION_AXIS>X</INTERACTION_AXIS>
            <GET_IE_VALUE_AS_PERCENT_OVER_100>#GET_YOKE_Z_PCT# -100 100 0 1 (F:MapRange)</GET_IE_VALUE_AS_PERCENT_OVER_100>
        </ReturnParameters>
    </ParametersFn>
	<!-- ############################################################################## -->
    <ParametersFn Name="ASOBO_Drag_Interactive_Point_Settings_Config">
		<Parameters Type="Default">
			<POINT_ID>0</POINT_ID>
		</Parameters>
		<Parameters Type="Override">
			<UseParametersFn Name="ASOBO_Interactive_Point_Parameters"/>
		</Parameters>
		<ReturnParameters>
			<VALUE_TYPE>PERCENT</VALUE_TYPE>
			<IE_GET_STATE>#GET_INTERACTIVE_POINT_GOAL#</IE_GET_STATE>
			<IE_SET_STATE>#SET_INTERACTIVE_POINT_GOAL#</IE_SET_STATE>
			<UseParametersFn Name="ASOBO_Watch_Simvar_Helper">
				<SIMVAR>#SIMVAR_INTERACTIVE_POINT_GOAL#</SIMVAR>
			</UseParametersFn>
			<ANIM_LAG>0</ANIM_LAG>
			<ANIM_CODE>#GET_INTERACTIVE_POINT_OPEN#</ANIM_CODE>
		</ReturnParameters>
    </ParametersFn>
    <!-- ############################################################################## -->
</ModelBehaviors>